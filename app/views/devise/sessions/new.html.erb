<div class="container-fluld pt-3">
  <div class="row">
    <div class="col s4 offset-s4">
      <div class="row login-form">
        <div class="col s12">
          <div class="card">
            <span class="card-title">Log in</span>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs row">
                <div class="input-field col s12 email user_email">
                  <%= f.email_field :email, autofocus: true, class: "validate" %>
                  <label for="user_email">Email</label>
                </div>
                <div class="input-field col s12 password user_password">
                  <%= f.password_field :password, autocomplete: "off", class: "validate" %>
                  <label for="user_password">Password</label>
                </div>
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>
                <div class="form-actions right">
                  <button class="btn waves-effect waves-light" type="submit" name="action">Next</button>
                </div>
              <% end %>
              <div class="card-action">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
