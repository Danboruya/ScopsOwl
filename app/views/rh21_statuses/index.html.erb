<p id="notice"><%= notice %></p>

<h1>Rh21 Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rh21_statuses.each do |rh21_status| %>
      <tr>
        <td><%= rh21_status.status %></td>
        <td><%= link_to 'Show', rh21_status %></td>
        <td><%= link_to 'Edit', edit_rh21_status_path(rh21_status) %></td>
        <td><%= link_to 'Destroy', rh21_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

