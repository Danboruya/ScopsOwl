<p id="notice"><%= notice %></p>

<h1>Chatrooms</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chatrooms.each do |chatroom| %>
      <tr class="btn-group">
        <td><%= chatroom.name %></td>
        <td><%= link_to 'Show', chatroom, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_chatroom_path(chatroom), class: 'btn btn-default'%></td>
        <td><%= link_to 'Destroy', chatroom, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-danger' %></td>
        <td><%= link_to 'Join', chatroom_chatroom_users_path(chatroom), method: :post,class: 'btn btn-default' %></td>
        <td><%= link_to 'leave', chatroom_chatroom_users_path(chatroom), method: :delete, class: 'btn btn-default btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chatroom', new_chatroom_path, class: 'btn btn-default' %>
