<h1>Rh21 Roles</h1>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rh21_roles.each do |rh21_role| %>
      <tr>
        <td><%= rh21_role.role %></td>
        <td><%= link_to 'Show', rh21_role %></td>
        <td><%= link_to 'Edit', edit_rh21_role_path(rh21_role) %></td>
        <td><%= link_to 'Destroy', rh21_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
