<p id="notice"><%= notice %></p>

<h1>QPage Threads</h1>

<% @rh21_threads.each do |rh21_thread| %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= User.find(rh21_thread.user_id).handle %> - <%= link_to rh21_thread.title, rh21_thread %></h3>
    </div>
    <div class="panel-body">
      <%= rh21_thread.timestamp %>
      <br />
      Language: <%= Rh21Language.find(rh21_thread.language_id).language %>
      <br />
      <%= rh21_thread.subject %>
      <br />
      <%= rh21_thread.quality %>
      <div class="progress"> <!-- ToDo: Need to fill this one using the correct quality value-->
        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
          <span class="sr-only">20% Complete</span>
        </div>
      </div>
    </div>
  </div>
<% end %>
<br>

<%= link_to 'New Thread', new_rh21_thread_path, class: "btn btn-lg btn-primary" %>
